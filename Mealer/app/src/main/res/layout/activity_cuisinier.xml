<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context=".Cuisinier">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Bienvenue!"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Vous êtes connecté en tant que"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Cuisinier"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/suspendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Vous avez été suspendu"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="indéfiniment"
        android:visibility="gone"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Vous avez été suspendu indéfiniment"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:textSize="18sp" />

    <Button
        android:id="@+id/profil"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Profil"
        android:visibility="visible"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/menu"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Menu"
        android:visibility="visible"
        android:textColor="@android:color/holo_red_dark" />
    <Button
        android:id="@+id/offert"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Repas offerts"
        android:visibility="visible"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/demandes"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Demandes"
        android:visibility="visible"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/deconnexionC"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Déconnection"
        android:textColor="@android:color/holo_red_dark" />

</LinearLayout>